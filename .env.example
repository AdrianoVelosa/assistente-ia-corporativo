# .env.example
# Exemplo de configuração para o Assistente IA Corporativo
# Copie este arquivo para .env e ajuste os valores conforme necessário

# Configurações do Flask
FLASK_APP=app.py
FLASK_ENV=production  # Altere para 'development' em ambiente de desenvolvimento
FLASK_DEBUG=0  # Altere para 1 em ambiente de desenvolvimento
SECRET_KEY=altere-esta-chave-para-uma-string-aleatoria-segura

# Configurações do modelo LLaMA
LLAMA_EXEC_PATH=/caminho/para/llama.cpp/main
LLAMA_MODEL_PATH=/caminho/para/modelo/llama-3-8b-instruct.Q4_K_M.gguf
LLAMA_CONTEXT_SIZE=4096
LLAMA_TEMPERATURE=0.7

# Configurações de logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=/var/log/assistente-ia/app.log

# Configurações de integração (descomente e configure conforme necessário)
# Integração com SharePoint
#SHAREPOINT_ENABLED=false
#SHAREPOINT_URL=https://seudominio.sharepoint.com
#SHAREPOINT_SITE=sites/SeuSite
#SHAREPOINT_CLIENT_ID=seu-client-id
#SHAREPOINT_CLIENT_SECRET=seu-client-secret

# Integração com File Server
#FILESERVER_ENABLED=false
#FILESERVER_HOST=servidor-de-arquivos
#FILESERVER_SHARE=\\compartilhamento
#FILESERVER_USERNAME=usuario
